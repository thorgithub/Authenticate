    <main class="container col-sm-4 my-5"> 
    <form action="/users/login" method="POST">
      <%- include ./partials/messages %>
    <div class="form-group ">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password" required>
    </div>
          
    <button type="" class="btn d-inline btn-outline-secondary my-3"> login</button>
    </form>
    <small id="emailHelp" class="form-text d-inline text-muted">Do not have an account !</small>
    <button type="" class="d-inline btn btn-outline-secondary my-3"> <a href="/users/register">Register</a></button>
                    
       
    
       
    </main> 
    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
